{% extends 'base.html.twig' %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block header %}
	{{ article.header }}
{% endblock %}

{% block meta %}
	<meta name="description" content="{{ article.sumUp }}">
	<meta name="author" content="durandal">
<meta name="url" content="https://tp-s6-web-2022-1182.herokuapp.com/{{ article.category.entitled }}/{{ article.urlPath }}_{{ article.id }}.html">
	<meta name="copyright" content="durandal">
	<meta name="robots" content="index,follow">
{% endblock %}





{% block body %}
<style>
	.image-gallery {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		grid-gap: 20px;  
		width: 640px;
		height: 300px;
	}

	.image-gallery div:nth-child(1){
		background-image: url("{{ asset('build/images/resized-imgs/catastrophes-rechauffement-climatique.png') }}");

			background-position: 0px 0px;
	}

	.image-gallery div:nth-child(2){
		background-image: url("{{ asset('build/images/resized-imgs/catastrophes-rechauffement-climatique.png') }}");
		background-position: 200px 0px;
	}

	.image-gallery div:nth-child(3){
		background-image: url("{{ asset('build/images/resized-imgs/catastrophes-rechauffement-climatique.png') }}");
		background-position: 400px 0px;
	}

	.gallery-container{
		width:100%;
		display:flex;
		justify-content:center;
	}
</style>


	<div
		class="col-md-12 blog-post" style='display:block'>

		<!-- Post Headline Start -->
		<div class="post-title">
			<h1>{{ article.header }}</h1>
		</div>
		<!-- Post Headline End -->


		<!-- Post Detail Start -->
		<div class="post-info">
			<span>Article du
				{{ article.createdAt |format_datetime(locale='en') }}
				écrit par
				{{ article.authorName }}</span>
		</div>
		<!-- Post Detail End -->


		<p>{{ article.content | raw}}</p>


		<!-- Post Image Start -->
		<div class="post-image margin-top-40 margin-bottom-40">

		<img src="{{ asset('build2/images/ours-glacier-fonte-rechauffement-climatique.jpg') }}" alt="ours-sur-un-glacier-en-fonte-rechauffement-climatique.jpg">

			<p>Aidez nous à sauver notre chère planète.</p>
		</div>
		<!-- Post Image End -->

		<!-- Post Image Gallery Start -->
		<div class="gallery-container">
			<div class="image-gallery">
				<div class="image-gallery-element"></div>
				<div class="image-gallery-element"></div>
				<div class="image-gallery-element"></div>
			</div>
		</div>
		<!-- Post Image Gallery End -->
	</div>
	<!-- Post Author Bio Box ends -->

</div>{% endblock %}

